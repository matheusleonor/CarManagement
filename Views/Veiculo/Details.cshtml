@model CarManagement.Models.Veiculo

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Veículo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Placa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Placa)
        </dd>

        <dt>
            Modelo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Modelo.Nome)
        </dd>

        <dt>
            Marca
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Marca.Nome)
        </dd>

        <dt>
            Cor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cor.Descricao)
        </dd>

        <dt>
            Combustível
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Combustivel.Descricao)
        </dd>

        <dt>
            Status
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Fotos
        </dt>
        <dd>
            @if (Model.Fotos != null && Model.Fotos.Any())
            {
                <div class="row">
                    @foreach (var foto in Model.Fotos)
                    {
                        <div class="col-md-4">
                            <img src="@foto" alt="Foto do Veículo" class="img-fluid mb-2" />
                        </div>
                    }
                </div>
            }
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.TipoUsuarioId == 1)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) @: |
    }
    @Html.ActionLink("Back to List", "Index")
</div>
